{
  "manifest_version": 3,
  "name": "AppliFlow Extension",
  "version": "1.0",
  "description": "Streamline job applications with tailored resume and cover letter enhancements.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}
